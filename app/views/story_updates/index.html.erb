<h1><strong>Stories</strong></h1>

<table>
  <thead>
    <tr>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @stories.each do |story| %>
      <tr>
        <td><%= link_to story.title, story_path(story) %></td><br>

        <td><%= link_to 'Edit   ', edit_story_path(story) %></td>

        <td><%= link_to 'Delete', story, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Story', new_story_path %> <br>
<%= link_to 'Update this Story', new_story_update_path %> <br>

