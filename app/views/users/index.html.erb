<%= content_for :breadcrumbs do %>
  <ol class="breadcrumb">
    <li><%= link_to 'Home', root_path %></li>
    <li class="active">Storypiecers</li>
  </ol>
<% end %>

<h1>Storypiecers</h1>
<table class="table table-striped">
  <thead>
    <tr>
      <th colspan="3">Profiles</th>
    </tr>
  </thead>
  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= link_to user.profile.name, user_profile_path(user) %></td><br>
        <td><% if cannot? :edit, @user %>
        <%= link_to "Edit   ", edit_user_profile_path(user) %>
        <% end %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<div class="row">
  <div class="col-sm-12">
  </div>
</div>
